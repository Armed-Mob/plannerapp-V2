@namespace PlannerApp.Components


<EditForm Model="_model" OnValidSubmit="LoginUserAsync">
    <DataAnnotationsValidator />

    <MudCard Class="mt-3">

        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">
                    Welcome to PlannerApp v2.0
                </MudText>
            </CardHeaderContent>            
        </MudCardHeader>

        <MudCardContent>
            <MudTextField Label="Email" HelperText="required" @bind-Value="@_model.Email" />
            <MudTextField InputType="InputType.Password" Label="Password" HelperText="required" @bind-Value="@_model.Password" />
        </MudCardContent>

        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Style="margin:3px;">Login</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Style="margin:3px;">Create Account</MudButton>
        </MudCardActions>

    </MudCard>
</EditForm>